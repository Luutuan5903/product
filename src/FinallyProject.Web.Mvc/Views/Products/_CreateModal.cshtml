@using FinallyProject.Web.Models.Common.Modals
@using FinallyProject.Web.Models.Product
@model IndexViewModel
@{
    Layout = null;
}
<div class="modal fade" id="ProductCreateModal" tabindex="-1" role="dialog" aria-labelledby="ProductCreateModalLabel" data-backdrop="static">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            @await Html.PartialAsync("~/Views/Shared/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(L("CreateNewProduct")))
            <form name="productCreateForm" role="form" class="form-horizontal">
                <div class="modal-body">
                    <ul class="nav nav-tabs" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" data-toggle="tab" role="tab" href="#create-product-details">@L("ProductDetails")</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-toggle="tab" role="tab" href="#create-product-categories">@L("ProductCategories")</a>
                        </li>
                    </ul>
                    <div class="tab-content mt-4">
                        <div role="tabpanel" class="tab-pane container active" id="create-product-details">
                            <div class="form-group row required">
                                <label class="col-md-3 col-form-label">@L("ProductName")</label>
                                <div class="col-md-9">
                                    <input type="text" class="form-control" name="ProductName" required maxlength="200" minlength="2">
                                </div>
                            </div>
                            <div class="form-group row required">
                                <label class="col-md-3 col-form-label">@L("Price")</label>
                                <div class="col-md-9">
                                    <input type="number" class="form-control" name="Price" required step="0.01" min="0">
                                </div>
                            </div>
                            <div class="form-group row required">
                                <label class="col-md-3 col-form-label">@L("Stock")</label>
                                <div class="col-md-9">
                                    <input type="number" class="form-control" name="Stock" required min="0">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-md-3 col-form-label">@L("IsActive")</label>
                                <div class="col-md-9">
                                    <input type="checkbox" name="IsActive" value="true" checked />
                                </div>
                            </div>
                        </div>
                        <div role="tabpanel" class="tab-pane container" id="create-product-categories">
                            <div class="row">
                                @foreach (var category in Model.Categories)
                                {
                                    <div class="col-md-6">
                                        <input type="checkbox" name="CategoryIds" id="category-@category.Id" value="@category.Id" title="@category.Description" />
                                        <label for="category-@category.Id" title="@category.Description">@category.Name</label>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
                @await Html.PartialAsync("~/Views/Shared/Modals/_ModalFooterWithSaveAndCancel.cshtml")
            </form>
        </div>
    </div>
</div>
